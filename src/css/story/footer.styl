footer
	margin-bottom 3rem
	.patreon
		display flex
		margin 0 auto
		align-items center
		justify-content space-between
		flex-wrap wrap
		max-width 40rem
		p
			padding-right 1rem
			max-width 30rem
			margin 0.5rem auto
			width 90%
			+mq('bp-4')
				width calc(100% - 16rem)
				margin 0 auto
		a
			background $gray-light
			border-radius 3px
			padding 1rem
			color $bg
			font-weight 600
			width 90%
			max-width 30rem
			text-align center
			align-self flex-start
			margin 0.5rem auto
			border none
			+mq('bp-4')
				margin 0 auto
				width 16rem

	.recirc
		max-width 60rem
		margin 0 auto
		padding 0 1rem
		margin-top 3rem
	.recirc__hed
		text-align center
		text-transform uppercase
		letter-spacing 1px
		border-bottom none
		color $white
		width 20rem
		margin 1rem auto
		font-weight 600

	.recirc__articles
		display flex
		flex-wrap wrap
	
		li
			width 100%
			padding 1rem
			margin-top 2px
			&:nth-child(1)
				background-color $film
				a
					color darken($film, 60)
			&:nth-child(2)
				background-color $sports
				a
					color darken($sports, 60)
			&:nth-child(3)
				background-color $music
				a
					color darken($music, 60)
			&:nth-child(4)
				background-color $culture
				a
					color darken($culture, 60)
			&:nth-child(5)
				background-color $misc
				a
					color darken($misc, 60)
		a
			set-type-size(x-large)
			border-bottom none
			font-weight 600
			display block
			display flex
			align-items center
			justify-content space-between
		span
			margin 1rem	
		video
			display block
			width 15rem
			margin 1rem


	.company__wrapper
		display flex
		flex-wrap nowrap
		justify-content center
		max-width 60rem
		margin 3rem auto
		font-weight 500
		.company__left, .company__right
			max-width 25em
			padding 0 1em
			p
				margin 0
				font-size 0.8em
		.company__right
			text-align center
			font-weight 500

			ul
				font-weight 400
				font-size .8em
				line-height 1.6
				list-style-type none
				font-weight 500

			li
				margin-right 1.5em
				float left
				font-size 12px
				font-weight 500
				margin-bottom .5rem
				&:last-of-type
					margin-right 0px
			a
				text-transform uppercase
				text-decoration none
				border-bottom none
				font-weight 500


			svg
				fill $white
				height 16px
				width 16px

	.company__trademark
		text-align center
