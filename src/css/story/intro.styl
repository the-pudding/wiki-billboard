.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		padding-top 3rem
		font-weight 300
		text-align center
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
	
	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 3rem
		padding-bottom 1.5rem
		text-align center
		set-type-size('small', true)
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)
	
	&__prelude
		max-width 44rem
		margin 0 auto
		span
			padding 0 0.5em
			font-weight 600
		.film
			background-color $film
		.sports
			background-color $sports
		.music
			background-color $music
		.culture
			background-color $culture
		.misc
			background-color $misc

	time
		background-color $gray-light
		font-weight 600
		font-size 0.75em
		padding 0.25em 0.5em
		text-transform uppercase