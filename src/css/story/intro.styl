.intro
	margin 0 auto
	padding 2rem 1rem 1.5rem 1rem
	padding-bottom 0
	+mq('bp-4')
		padding-top 4rem

	&__hed
		max-width 60rem
		margin 0 auto
		padding-top 3rem
		font-weight 300
		text-align center
		set-type-size('x-large', false)
		+mq('bp-4')
			set-type-size('xxx-large', false)
		
	&__dek
		max-width $column-width
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)
	
	&__prelude
		max-width 30rem
		margin 0 auto
	&__categories
		display flex
		flex-wrap wrap
		justify-content center
		max-width 40rem
		margin 1rem auto
		margin-top 1.5rem
		margin-bottom 0
		span
			padding 0 0.5em
			font-weight 600
			border 2px solid $bg
			set-type-size(small, false)
			+mq('bp-4')
				set-type-size(medium, false)
		.film
			background-color $film
			color $film-fg
		.sports
			background-color $sports
			color $sports-fg
		.music
			background-color $music
			color $music-fg
		.culture
			background-color $culture
			color $culture-fg
		.misc
			background-color $misc
			color $misc-fg

	&__updated
		display block
		width 12rem
		margin 1rem auto
		margin-bottom 0.25rem
		text-align center
		border-bottom 2px solid $gray-dark
		font-weight 600
		set-type-size(x-small, false)
		padding 0.5em 0
		text-transform uppercase
		letter-spacing 0.05em