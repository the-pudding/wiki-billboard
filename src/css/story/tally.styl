#tally
	.person
		path
			stroke $gray
			fill none
		text
			visibility hidden
			font-weight 600
			set-type-size(small, false)
			fill $white

		&.is-active
			path
				stroke-width 2px
				stroke $white
			text
				visibility visible

	.g-voronoi
		path
			fill-opacity 0
			stroke-opacity 0
			stroke-width 0