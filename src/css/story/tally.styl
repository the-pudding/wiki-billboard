#tally
	figure
		max-width 60rem
	.person
		path
			stroke $gray
			fill none
		text
			visibility hidden
			font-weight 600
			set-type-size(small, false)
			fill $white

		&.is-active
			path
				stroke-width 2px
				stroke $white
			text
				visibility visible

	.g-voronoi
		path
			fill-opacity 0
			stroke-opacity 0
			stroke-width 0

	.g-axis
		text
			fill $off-white
			font-weight 600
			font-size 12px
			font-family $sans

	.axis--y
		line
			stroke $off-white
			stroke-dasharray 4px 4px
			stroke-opacity 0.2
		path
			display none
		.tick:first-of-type
			display none
			

	.axis--x
		line
			display none
		path
			display none